<%- include('../partials/header') %>
    <%- include('../partials/sidebar_admin') %>
        <%- include('../partials/navbar', { titulo: 'Centro de Comunicaciones' , icono: 'fa-comments' , usuario }) %>

            <style>
                .border-cliente {
                    border-left-color: #2ecc71 !important;
                }

                .border-super {
                    border-left-color: #c0392b !important;
                }

                .tabs {
                    display: flex;
                    border-bottom: 2px solid #ddd;
                    margin-bottom: 20px;
                }

                .tab-btn {
                    padding: 10px 20px;
                    cursor: pointer;
                    font-weight: bold;
                    color: #7f8c8d;
                    border-bottom: 3px solid transparent;
                }

                .tab-btn.active {
                    color: #3498db;
                    border-bottom-color: #3498db;
                }

                .tab-content {
                    display: none;
                    animation: fadeIn 0.3s;
                }

                .tab-content.active {
                    display: block;
                }

                @keyframes fadeIn {
                    from {
                        opacity: 0
                    }

                    to {
                        opacity: 1
                    }
                }


                .msg-card {
                    background: white;
                    padding: 15px;
                    border-radius: 8px;
                    border-left: 4px solid #ddd;
                    margin-bottom: 15px;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
                }

                .msg-header {
                    display: flex;
                    justify-content: space-between;
                    margin-bottom: 10px;
                }

                .msg-from {
                    font-weight: bold;
                    color: #2c3e50;
                }

                .msg-role {
                    font-size: 0.8rem;
                    padding: 2px 6px;
                    border-radius: 4px;
                    color: white;
                }

                .role-cliente {
                    background: #2ecc71;
                }

                .role-trabajador {
                    background: #e67e22;
                }

                .role-super {
                    background: #c0392b;
                }


                .action-btn {
                    text-decoration: none;
                    margin-left: 10px;
                    color: #7f8c8d;
                    font-size: 1.1rem;
                }

                .action-btn:hover {
                    transform: scale(1.1);
                }
            </style>

            <div class="main-content">
                <main class="content">

                    <div class="tabs">
                        <div class="tab-btn active" onclick="openTab('recibidos')"><i class="fas fa-inbox"></i> Buzón de
                            Entrada</div>
                        <div class="tab-btn" onclick="openTab('redactar')"><i class="fas fa-pen"></i> Redactar Aviso
                        </div>
                        <div class="tab-btn" onclick="openTab('enviados')"><i class="fas fa-paper-plane"></i> Enviados
                        </div>
                    </div>

                    <div id="recibidos" class="tab-content active">
                        <% if (recibidos.length> 0) { %>
                            <% recibidos.forEach(m=> { %>
                                <div class="msg-card <%= m.cargo_remitente == 4 ? 'border-cliente' : 'border-super' %>">
                                    <div class="msg-header">
                                        <div>
                                            <span class="msg-from">
                                                <%= m.remitente %>
                                            </span>
                                            <span
                                                class="msg-role <%= m.cargo_remitente == 4 ? 'role-cliente' : 'role-super' %>">
                                                <%= m.cargo_remitente==4 ? 'Huésped' : 'Superusuario' %>
                                            </span>
                                        </div>
                                        <small style="color:#aaa;">
                                            <%= new Date(m.fecha).toLocaleString() %>
                                        </small>
                                    </div>
                                    <h4 style="margin-bottom: 5px;">
                                        <%= m.titulo %>
                                    </h4>
                                    <p style="color: #555;">
                                        <%= m.mensaje %>
                                    </p>

                                    <div
                                        style="margin-top: 10px; border-top: 1px solid #eee; padding-top: 10px; text-align: right;">
                                        <a href="https://wa.me/?text=Hola, recibí tu mensaje sobre: <%= m.titulo %>"
                                            target="_blank" class="action-btn" title="Responder por WhatsApp"
                                            style="color: #25D366;">
                                            <i class="fab fa-whatsapp"></i> WhatsApp
                                        </a>
                                        <a href="mailto:?subject=RE: <%= m.titulo %>&body=Hola, en respuesta a su aviso..."
                                            class="action-btn" title="Responder por Correo">
                                            <i class="fas fa-envelope"></i> Email
                                        </a>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p style="text-align: center; color: #aaa; margin-top: 20px;">No hay mensajes
                                            nuevos.</p>
                                        <% } %>
                    </div>

                    <div id="redactar" class="tab-content">
                        <div class="agg" style="max-width: 700px; margin: 0 auto;">
                            <form method="POST" action="/administrador/avisos/publicar" class="login-form">
                                <h3 style="grid-column: 1/-1; color: #3498db; margin-bottom: 10px;">Nuevo Comunicado
                                    Interno</h3>


                                <div class="form-group" style="grid-column: 1/-1;">
                                    <label>Destinatario:</label>
                                    <select name="rol_destino" required>
                                        <option value="trabajador">Personal del Hotel (Trabajadores)</option>
                                        <option value="cliente">Huéspedes (Clientes)</option>
                                        <option value="todos">Todos (General)</option>
                                    </select>
                                </div>
                                <div class="form-group" style="grid-column: 1/-1; margin-top: 10px;">
                                    <label style="display: flex; align-items: center; gap: 10px; cursor: pointer;">
                                        <input type="checkbox" name="enviar_whatsapp" value="1" style="width: auto;">
                                        <span style="color: #27ae60; font-weight: bold;">
                                            <i class="fab fa-whatsapp"></i> Notificar también por WhatsApp
                                        </span>
                                    </label>
                                </div>

                                <div class="form-group" style="grid-column: 1/-1;">
                                    <label>Asunto:</label>
                                    <input name="titulo" placeholder="Ej. Reunión de personal, Mantenimiento..."
                                        required>
                                </div>

                                <div class="form-group" style="grid-column: 1/-1;">
                                    <label>Mensaje:</label>
                                    <textarea name="mensaje" rows="5" placeholder="Escriba su mensaje aquí..." required
                                        style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;"></textarea>
                                </div>

                                <button type="submit" style="background: #3498db; grid-column: 1/-1;">
                                    <i class="fas fa-paper-plane"></i> Enviar Aviso
                                </button>
                            </form>
                        </div>
                    </div>

                    <div id="enviados" class="tab-content">
                        <% if (enviados.length> 0) { %>
                            <div class="crud">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Para</th>
                                            <th>Asunto</th>
                                            <th>Mensaje</th>
                                            <th>Acción</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% enviados.forEach(e=> { %>
                                            <tr>
                                                <td>
                                                    <%= new Date(e.fecha).toLocaleDateString() %>
                                                </td>
                                                <td><span class="badge" style="background: #95a5a6;">
                                                        <%= e.destinatario %>
                                                    </span></td>
                                                <td><strong>
                                                        <%= e.titulo %>
                                                    </strong></td>
                                                <td>
                                                    <%= e.mensaje %>
                                                </td>
                                                <td>
                                                    <a href="/administrador/avisos/eliminar/<%= e.id_aviso %>"
                                                        onclick="return confirm('¿Eliminar?')" style="color: #c0392b;">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <p style="text-align: center; color: #aaa; margin-top: 20px;">No has enviado ningún
                                    aviso.</p>
                                <% } %>
                    </div>

                </main>
                <%- include('../partials/footer') %>
            </div>

            <script>

                function openTab(tabName) {

                    const contents = document.querySelectorAll('.tab-content');
                    contents.forEach(c => c.classList.remove('active'));


                    const btns = document.querySelectorAll('.tab-btn');
                    btns.forEach(b => b.classList.remove('active'));

                    document.getElementById(tabName).classList.add('active');


                    event.currentTarget.classList.add('active');
                }
            </script>