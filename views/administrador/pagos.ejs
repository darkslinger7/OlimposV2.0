<%- include('../partials/header') %>
    <%- include('../partials/sidebar_admin') %>
        <%- include('../partials/navbar', { titulo: 'Finanzas del Hotel' , icono: 'fa-cash-register' , usuario }) %>

            <style>
                .balance-positivo {
                    color: #2980b9;
                    /* Azul */
                    font-weight: bold;
                    font-size: 1.1rem;
                }

                .balance-negativo {
                    color: #c0392b;
                    /* Rojo */
                    font-weight: bold;
                    font-size: 1.1rem;
                }

                /* Estilos específicos para finanzas */
                .monto-positivo {
                    color: #27ae60;
                    font-weight: bold;
                    font-family: 'Consolas', monospace;
                }

                .monto-negativo {
                    color: #c0392b;
                    font-weight: bold;
                    font-family: 'Consolas', monospace;
                }

                .modal {
                    display: none;
                    position: fixed;
                    z-index: 2000;
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5);
                    justify-content: center;
                    align-items: center;
                }

                .modal-content {
                    background: white;
                    padding: 25px;
                    border-radius: 8px;
                    width: 90%;
                    max-width: 500px;
                    animation: slideDown 0.3s;
                }

                @keyframes slideDown {
                    from {
                        transform: translateY(-30px);
                        opacity: 0;
                    }

                    to {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }

                .close-modal {
                    float: right;
                    font-size: 24px;
                    cursor: pointer;
                    color: #aaa;
                }
            </style>

            <div class="main-content">
                <main class="content">

                    <section class="tarjetas-panel">
                        <div class="tarjeta">
                            <div class="icono-tarjeta" style="background: #27ae60;">
                                <i class="fas fa-arrow-up"></i>
                            </div>
                            <div class="info-tarjeta">
                                <h3>Ingresos Totales</h3>
                                <p class="monto-positivo">+$<%= finanzas.ingresos.toLocaleString('en-US',
                                        {minimumFractionDigits: 2}) %>
                                </p>
                            </div>
                        </div>

                        <div class="tarjeta">
                            <div class="icono-tarjeta" style="background: #c0392b;">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="info-tarjeta">
                                <h3>Nómina Mensual</h3>
                                <p class="monto-negativo">-$<%= finanzas.egresos.toLocaleString('en-US',
                                        {minimumFractionDigits: 2}) %>
                                </p>
                            </div>
                        </div>

                        <div class="tarjeta">
                            <div class="icono-tarjeta" style="background: #2980b9;">
                                <i class="fas fa-wallet"></i>
                            </div>
                            <div class="info-tarjeta">
                                <h3>Balance Operativo</h3>
                                <p class="<%= finanzas.balance >= 0 ? 'balance-positivo' : 'balance-negativo' %>">
                                    $<%= finanzas.balance.toLocaleString('en-US', {minimumFractionDigits: 2}) %>
                                </p>
                                </p>
                            </div>
                        </div>
                    </section>

                    <div style="margin-bottom: 20px; text-align: right;">
                        <button onclick="abrirModalPago()"
                            style="background: #27ae60; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; font-weight: bold; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                            <i class="fas fa-plus-circle"></i> Registrar Ingreso
                        </button>
                    </div>

                    <section class="crud">
                        <h3 style="color: #34495e; border-bottom: 2px solid #eee;">Movimientos Recientes</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Referencia</th>
                                    <th>Cliente</th>
                                    <th>Método</th>
                                    <th>Concepto</th>
                                    <th>Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (pagos.length> 0) { %>
                                    <% pagos.forEach(p=> { %>
                                        <tr>
                                            <td>
                                                <%= new Date(p.fecha_pago).toLocaleDateString() %>
                                            </td>
                                            <td>#<%= p.num_referencia %>
                                            </td>
                                            <td>
                                                <strong>
                                                    <%= p.nombre_p %>
                                                </strong><br>
                                                <small style="color:#aaa;">
                                                    <%= p.cedula %>
                                                </small>
                                            </td>
                                            <td>
                                                <%= p.tipo_pago %>
                                            </td>
                                            <td>
                                                <%= p.bancoEmisor || 'Servicios' %>
                                            </td>
                                            <td class="monto-positivo">+$<%= p.monto_pago %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" style="text-align: center;">No hay pagos registrados
                                                        aún.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </section>

                </main>
                <%- include('../partials/footer') %>
            </div>

            <div id="modalPago" class="modal">
                <div class="modal-content">
                    <span class="close-modal" onclick="cerrarModal()">&times;</span>
                    <h3 style="color: #27ae60; margin-bottom: 20px;"><i class="fas fa-file-invoice-dollar"></i> Nuevo
                        Ingreso</h3>

                    <form method="POST" action="/administrador/pagos/registrar" autocomplete="off">
                        <div class="form-group">
                            <label>Cédula del Cliente</label>
                            <input type="text" name="cedula" placeholder="V-12345678" required
                                style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                        </div>

                        <div class="form-group" style="margin-top: 15px;">
                            <label>Monto ($)</label>
                            <input type="number" name="monto" step="0.01" required
                                style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-top: 15px;">
                            <div class="form-group">
                                <label>Referencia</label>
                                <input type="text" name="referencia" required
                                    style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                            </div>
                            <div class="form-group">
                                <label>Método</label>
                                <select name="tipo"
                                    style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                                    <option value="Efectivo">Efectivo</option>
                                    <option value="Pago Movil">Pago Móvil</option>
                                    <option value="Transferencia">Transferencia</option>
                                    <option value="Zelle">Zelle</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 15px;">
                            <label>Concepto / Nota</label>
                            <input type="text" name="concepto" placeholder="Ej. Hospedaje, Servicio extra..."
                                style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                        </div>

                        <button type="submit"
                            style="width: 100%; margin-top: 20px; background: #27ae60; color: white; border: none; padding: 12px; border-radius: 4px; cursor: pointer; font-weight: bold;">
                            Registrar Pago
                        </button>
                    </form>
                </div>
            </div>

            <script>
                const modal = document.getElementById('modalPago');
                function abrirModalPago() { modal.style.display = 'flex'; }
                function cerrarModal() { modal.style.display = 'none'; }
                window.onclick = function (e) { if (e.target == modal) cerrarModal(); }
            </script>