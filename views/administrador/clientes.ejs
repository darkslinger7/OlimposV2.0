<%- include('../partials/header') %>
    <%- include('../partials/sidebar_admin') %>
        <%- include('../partials/navbar', { titulo: 'Gestión de Huéspedes' , icono: 'fa-suitcase' , usuario }) %>

            <style>
                /* Modal */
                .modal {
                    display: none;
                    position: fixed;
                    z-index: 2000;
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5);
                    justify-content: center;
                    align-items: center;
                }

                .modal-content {
                    background: white;
                    padding: 25px;
                    border-radius: 8px;
                    width: 90%;
                    max-width: 500px;
                    position: relative;
                    animation: slideDown 0.3s;
                }

                @keyframes slideDown {
                    from {
                        transform: translateY(-30px);
                        opacity: 0;
                    }

                    to {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }

                .close-modal {
                    position: absolute;
                    right: 20px;
                    top: 15px;
                    font-size: 24px;
                    cursor: pointer;
                    color: #aaa;
                }

                .info-room {
                    background: #e8f6f3;
                    border: 1px solid #d1f2eb;
                    color: #16a085;
                    padding: 5px 10px;
                    border-radius: 4px;
                    font-weight: bold;
                    display: inline-block;
                }
            </style>

            <div class="main-content">
                <main class="content">

                    <section class="tarjetas-panel">
                        <div class="tarjeta">
                            <div class="icono-tarjeta fondo-verde">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="info-tarjeta">
                                <h3>Huéspedes Activos</h3>
                                <p>
                                    <%= huespedes.length %>
                                </p>
                            </div>
                        </div>
                        <div class="tarjeta">
                            <div class="icono-tarjeta fondo-azul">
                                <i class="fas fa-door-open"></i>
                            </div>
                            <div class="info-tarjeta">
                                <h3>Habitaciones Libres</h3>
                                <p>
                                    <%= habitacionesLibres.length %>
                                </p>
                            </div>
                        </div>
                    </section>

                    <section class="crud">
                        <h3 style="color: #27ae60; border-bottom: 2px solid #eee;">Registro de Alojamiento</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Habitación</th>
                                    <th>Huésped</th>
                                    <th>Contacto</th>
                                    <th>Ingreso</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (huespedes.length> 0) { %>
                                    <% huespedes.forEach(h=> { %>
                                        <tr>
                                            <td>
                                                <span class="info-room">Hab. <%= h.numero_habitacion %></span><br>
                                                <small>
                                                    <%= h.tipo %>
                                                </small>
                                            </td>
                                            <td>
                                                <strong>
                                                    <%= h.nombre_apellido %>
                                                </strong><br>
                                                <small style="color:#7f8c8d;">CI: <%= h.cedula %></small>
                                            </td>
                                            <td>
                                                <i class="fas fa-phone" style="font-size:0.8rem"></i>
                                                <%= h.telefono %><br>

                                                    <a href="https://wa.me/<%= h.telefono.replace(/[^0-9]/g, '') %>"
                                                        target="_blank"
                                                        style="color: #25D366; text-decoration: none; font-weight: bold; font-size: 0.9rem;">
                                                        <i class="fab fa-whatsapp"></i> Contactar
                                                    </a>

                                                    <br><small>
                                                        <%= h.email %>
                                                    </small>
                                            </td>
                                            <td>
                                                <%= new Date(h.fecha_registro).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <button class="btn-sm"
                                                    style="background: #f39c12; border: none; color: white; padding: 5px 10px; border-radius: 4px; cursor: pointer; margin-right: 5px;"
                                                    onclick="abrirModalCambio(this)"
                                                    data-idcliente="<%= h.id_cliente %>"
                                                    data-idusuario="<%= h.id_usuario %>"
                                                    data-nombre="<%= h.nombre_apellido %>"
                                                    data-idhab="<%= h.id_habitacion %>"
                                                    data-numhab="<%= h.numero_habitacion %>">
                                                    <i class="fas fa-exchange-alt"></i> Mover
                                                </button>

                                                <button class="btn-sm"
                                                    style="background: #c0392b; border: none; color: white; padding: 5px 10px; border-radius: 4px; cursor: pointer;"
                                                    onclick="confirmarCheckout('<%= h.id_cliente %>', '<%= h.id_habitacion %>', '<%= h.id_usuario %>', '<%= h.numero_habitacion %>')">
                                                    <i class="fas fa-sign-out-alt"></i> Salida
                                                </button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" style="text-align: center;">No hay huéspedes
                                                        registrados actualmente.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </section>

                </main>
                <%- include('../partials/footer') %>
            </div>

            <div id="modalCambio" class="modal">
                <div class="modal-content">
                    <span class="close-modal" onclick="cerrarModal()">&times;</span>
                    <h3 style="color: #f39c12; margin-bottom: 20px;"><i class="fas fa-exchange-alt"></i> Cambiar de
                        Habitación</h3>

                    <p>Huésped: <strong id="nombreHuesped"></strong></p>
                    <p style="margin-bottom: 20px; font-size: 0.9rem; color: #666;">
                        Habitación Actual: <strong id="habActual"></strong>
                    </p>

                    <form method="POST" action="/administrador/clientes/cambiar_habitacion">
                        <input type="hidden" name="id_cliente" id="inputIdCliente">
                        <input type="hidden" name="id_usuario" id="inputIdUsuario">
                        <input type="hidden" name="id_habitacion_vieja" id="inputIdHabVieja">

                        <div class="form-group">
                            <label>Seleccionar Nueva Habitación (Disponibles):</label>
                            <select name="id_habitacion_nueva" required
                                style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                                <option value="" disabled selected>-- Seleccione --</option>
                                <% if (habitacionesLibres.length> 0) { %>
                                    <% habitacionesLibres.forEach(hl=> { %>
                                        <option value="<%= hl.id_habitacion %>">
                                            Hab. <%= hl.numero %> - <%= hl.tipo %> ($<%= hl.precio %>)
                                        </option>
                                        <% }) %>
                                            <% } else { %>
                                                <option value="" disabled>No hay habitaciones libres</option>
                                                <% } %>
                            </select>
                        </div>

                        <button type="submit"
                            style="width: 100%; margin-top: 20px; background: #f39c12; color: white; border: none; padding: 12px; border-radius: 4px; cursor: pointer; font-weight: bold;">
                            Confirmar Cambio
                        </button>
                    </form>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                const modal = document.getElementById('modalCambio');

                function abrirModalCambio(btn) {
                    const d = btn.dataset;
                    document.getElementById('inputIdCliente').value = d.idcliente;
                    document.getElementById('inputIdUsuario').value = d.idusuario;
                    document.getElementById('inputIdHabVieja').value = d.idhab;

                    document.getElementById('nombreHuesped').innerText = d.nombre;
                    document.getElementById('habActual').innerText = d.numhab;

                    modal.style.display = 'flex';
                }

                function cerrarModal() {
                    modal.style.display = 'none';
                }

                window.onclick = function (e) { if (e.target == modal) cerrarModal(); }

                function confirmarCheckout(idCliente, idHab, idUsu, numHab) {
                    Swal.fire({
                        title: '¿Realizar Check-out?',
                        text: `La habitación ${numHab} quedará disponible y el huésped saldrá del sistema.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#27ae60',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sí, confirmar salida'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/administrador/clientes/checkout/${idCliente}/${idHab}/${idUsu}`;
                        }
                    })
                }
            </script>